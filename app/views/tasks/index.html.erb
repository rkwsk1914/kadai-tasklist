<% if logged_in? %>
    <h1><%= current_user.name %> </h1>
    <%= link_to 'Logout', logout_path, method: :delete %>
    
    <ul>
      <% @tasklist.each do |tasklist| %>
      <li><%= link_to tasklist.id, tasklist %>:<%= tasklist.status %> &gt; <%= tasklist.content %></li>
      <% end %>
    </ul>
    
    <%= link_to '新規タスク作成', new_task_path %>
<% else %>
    <h1>Tasklist</h1>
    <%= link_to 'Sign Up', signup_path %>
    <%= link_to 'Login', sessions_new_path %>
<% end %>